<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.StockDealLineRealtimeFragment">
    <com.fox.stockhelper.ui.view.StockDealInfoView
        android:id="@+id/stockDealInfoSDIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="@dimen/zero_margin"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:gravity="center">
            <com.github.mikephil.charting.stockChart.OneDayChart
                android:id="@+id/stockOneDayChart"
                android:layout_width="match_parent"
                android:layout_height="330dp"/>
            <ImageView
                android:id="@+id/allKlineIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/stockOneDayChart"
                android:layout_alignRight="@id/stockOneDayChart"
                android:src="@drawable/full_screen"/>
        </RelativeLayout>
        <com.fox.stockhelper.ui.view.StockTopPriceView
            android:id="@+id/stockTopPriceSTPV"
            android:layout_width="@dimen/zero_margin"
            android:layout_height="wrap_content"
            android:layout_weight="16"/>
    </LinearLayout>
</LinearLayout>