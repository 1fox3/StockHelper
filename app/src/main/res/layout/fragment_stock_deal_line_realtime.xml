<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.StockDealLineRealtimeFragment">
    <com.fox.stockhelper.ui.view.StockDealInfoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:currentPrice="41.70"
        app:yesterdayClosePrice="41.88"
        app:todayOpenPrice="41.36"
        app:todayHighestPrice="42.28"
        app:todayLowestPrice="40.51"
        app:dealNum="33095413"
        app:dealMoney="1365716922.2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:gravity="center">
            <com.github.mikephil.charting.stockChart.OneDayChart
                android:id="@+id/stockOneDayChart"
                android:layout_width="match_parent"
                android:layout_height="330dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/stockOneDayChart"
                android:layout_alignRight="@id/stockOneDayChart"
                android:src="@drawable/full_screen"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="35"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="五档"
                android:textColor="@color/main"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stockTopSellDealPriceRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stockTopBuyDealPriceRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>