<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stock_rank_item_height"
    android:orientation="horizontal">
    <com.fox.stockhelper.ui.view.StockValueTextView
        android:id="@+id/stockRankValuePrice"
        android:layout_width="@dimen/stock_rank_item_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/ui_text_size_big"
        app:type="number"
        app:value="1545.2"/>
    <com.fox.stockhelper.ui.view.StockValueTextView
        android:id="@+id/stockRankValueUptickRate"
        android:layout_width="@dimen/stock_rank_item_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/ui_text_size_big"
        app:type="rate"
        app:value="0.0256"/>
    <com.fox.stockhelper.ui.view.StockValueTextView
        android:id="@+id/stockRankValueSurgeRate"
        android:layout_width="@dimen/stock_rank_item_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/ui_text_size_big"
        app:type="rate"
        app:value="0.085"/>
    <com.fox.stockhelper.ui.view.StockValueTextView
        android:id="@+id/stockRankValueDealNum"
        android:layout_width="@dimen/stock_rank_item_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/ui_text_size_big"
        app:type="number"
        app:value="15121245.2"/>
    <com.fox.stockhelper.ui.view.StockValueTextView
        android:id="@+id/stockRankValueDealMoney"
        android:layout_width="@dimen/stock_rank_item_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/ui_text_size_big"
        android:gravity="center"
        app:type="number"
        app:value="151212121245.2"/>
</LinearLayout>