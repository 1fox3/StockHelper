<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.StockDealLineOfflineFragment">
    <com.fox.stockhelper.ui.view.StockDealInfoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:currentPrice="41.70"
        app:yesterdayClosePrice="41.88"
        app:todayOpenPrice="41.36"
        app:todayHighestPrice="42.28"
        app:todayLowestPrice="40.51"
        app:dealNum="33095413"
        app:dealMoney="1365716922.2"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        <com.github.mikephil.charting.stockChart.KLineChart
            android:id="@+id/stockKLineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/stockKLineChart"
            android:layout_alignRight="@id/stockKLineChart"
            android:src="@drawable/full_screen"/>
