<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.StockDealLineOfflineFragment">
    <com.fox.stockhelper.ui.view.StockDealInfoView
        android:id="@+id/stockDealInfoSDIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        <com.fox.stockhelper.ui.chart.custom.StockKLineChart
            android:id="@+id/stockKLineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
        <ImageView
            android:id="@+id/allKlineIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/stockKLineChart"
            android:layout_alignRight="@id/stockKLineChart"
            android:src="@drawable/full_screen"/>
    </RelativeLayout>
</LinearLayout>