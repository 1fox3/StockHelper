<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.view.StockDealInfoView">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:paddingTop="@dimen/common_margin"
        android:paddingBottom="@dimen/common_margin">
        <com.fox.stockhelper.ui.view.StockValueTextView
            android:id="@+id/currentPriceSVTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:value="1564.23"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.fox.stockhelper.ui.view.StockValueTextView
                android:id="@+id/uptickPriceSVTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ui_text_size_small"
                android:paddingLeft="@dimen/common_margin"
                app:value="23.56"/>
            <com.fox.stockhelper.ui.view.StockValueTextView
                android:id="@+id/uptickRateSVTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ui_text_size_small"
                android:paddingLeft="@dimen/common_margin"
                app:value="0.12"
                app:type="rate"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingTop="@dimen/common_margin"
        android:paddingBottom="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高"/>
            <com.fox.stockhelper.ui.view.StockValueTextView
                android:id="@+id/todayHighestPriceSVTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_margin"
                app:value="5623.56"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="低"/>
            <com.fox.stockhelper.ui.view.StockValueTextView
                android:id="@+id/todayLowestPriceSVTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_margin"
                app:value="5623.56"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingTop="@dimen/common_margin"
        android:paddingBottom="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开"/>
            <com.fox.stockhelper.ui.view.StockValueTextView
                android:id="@+id/todayOpenPriceSVTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_margin"
                app:value="5623.56"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="均"/>
            <com.fox.stockhelper.ui.view.StockValueTextView
                android:id="@+id/dealAvgPriceSVTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_margin"
                app:value="5623.56"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingTop="@dimen/common_margin"
        android:paddingBottom="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="量"/>
            <com.fox.stockhelper.ui.view.StockValueTextView
                android:id="@+id/dealNumSVTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_margin"
                app:value="5623.56"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="额"/>
            <com.fox.stockhelper.ui.view.StockValueTextView
                android:id="@+id/dealMoneySVTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_margin"
                app:value="5623.56"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>